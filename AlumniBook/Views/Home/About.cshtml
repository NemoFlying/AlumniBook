
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>主页</title>
    <link rel="stylesheet" href="~/css/home.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/css/imgList.css" rel="stylesheet" />*@
    <link href="~/css/AdminUser.css" rel="stylesheet" />
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/MyAjaxForm.js" type="text/javascript"></script>
    <style>
        .userNameLi span{
            color:white;
        }
        .layui-form-item{
            margin-top:10px;
        }
        .logonNames{
            line-height:1.5;
        }
        .layui-form{
            width:50%;
        }
        .layui-input-block {
            width: 100%;
        }
        .imglist li{
            width:50%;
        }
    </style>
</head>
<body>
    <div>
        <div class="header">
            <h1>在线同学录</h1>
            <button title="主页" type="button" class="homeBtn"></button>
            @*<button title="留言" type="button" class="MessageBoardBtn"></button>*@
            <button title="相册" type="button" class="PhotoAlbumBtn"></button>
            <button title="退出登录" type="button" class="offBtn"></button>
        </div>
        <div class="body">
            <div class="leftDiv">
                <div class="leftTop">
                    <ul>
                        <li class="classHomeImg">
                            @*<img src="#" alt="Alternate Text" />*@
                        </li>
                        <li class="userNameLi">
                            <span>用户名：</span>
                            <span class="userNames"></span>
                        </li>
                        @*<li>
                                <p><span>类型:</span><span>普通</span><span>/</span><span>管理</span></p>
                            </li>*@
                        <li class="UserBtn">
                            @*<button type="button" class="btn btn-warning adminUser">管理员设置</button>*@
                        </li>
                        @*<li class="UserBtn"><button class="btn btn-primary">修改个人资料</button></li>*@
                    </ul>
                </div>
                <div class="leftBottom">
                    <h2>公告</h2>
                    <div class="leftBottomDiv"><ul></ul></div>
                </div>
            </div>
            <div class="rightDiv">
                <div>
                    <div class="imgDivL">
                        <h2>个人信息</h2>
                        <p class="ImgIntro">您可以修改个人信息！</p>
                    </div>
                    <div class="imgDivR">


                    </div>
                </div>
                <ul class="imglist">
                    <li>
                        <form class="layui-form">
                            <div class="layui-form-item">
                                <label class="layui-form-label">用户名</label>
                                <div class="layui-input-block"><h3 class="logonNames"></h3></div>
                            </div>
                            <div class="layui-form-item">
                                <label class="layui-form-label">身份证号码</label>
                                <div class="layui-input-block">
                                    <input type="text" name="title" required lay-verify="required" maxlength="18" placeholder="请输入身份证号码" autocomplete="off" class="layui-input IdCard">
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <label class="layui-form-label">真实姓名</label>
                                <div class="layui-input-block">
                                    <input type="text" name="title" required lay-verify="required" placeholder="请输入真实姓名" autocomplete="off" class="layui-input realName">
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <label class="layui-form-label">QQ</label>
                                <div class="layui-input-block">
                                    <input type="text" name="title" required lay-verify="required" placeholder="请输入QQ" autocomplete="off" class="layui-input QQId">
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <label class="layui-form-label">性别</label>
                                <div class="layui-input-block">
                                    <select class="sexSelect" name="sex" id="sex" lay-verify="required">
                                        <option class="default" value=""></option>
                                        <option value="M">男</option>
                                        <option value="F">女</option>
                                    </select>
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <label class="layui-form-label">手机号码</label>
                                <div class="layui-input-block">
                                    <input type="text" name="title" required lay-verify="required" maxlength="11" placeholder="请输入手机号码" autocomplete="off" class="layui-input phone">
                                </div>
                            </div>
                            <div class="layui-form-item">
                                <div class="layui-input-block">
                                    <button class="layui-btn userBtn" type="button" lay-submit lay-filter="formDemo">立即提交</button>
                                    @*<button type="reset" class="layui-btn layui-btn-primary">重置</button>*@
                                </div>
                            </div>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    @*<script src="~/js/imgList.js"></script>*@
    <script src="~/Scripts/layui/layui.js"></script>
    <script src="~/js/about.js"></script>

</body>
</html>
